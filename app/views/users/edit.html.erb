<% provide(:title, 'Edit user') %>
<div class='row'>
  <div class='span4 offset4'>
    <h2>Update your profile</h2>
    <%= form_for(@user) do |f| %>
      <%= render 'fields', f: f %>
      <%= f.submit "Save changes", class: "btn btn-small btn-primary" %>
    <% end %>

    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails" target="_blank">change</a>
  </div>
</div>
